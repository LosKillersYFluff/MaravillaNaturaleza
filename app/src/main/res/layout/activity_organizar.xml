<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <!-- Home icon -->
    <ImageButton
        android:id="@+id/home"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/inicio"
        android:background="@android:color/transparent"
        android:layout_marginStart="25dp"
        android:scaleType="fitCenter"/>

    <!-- Score -->
    <RelativeLayout
        android:id="@+id/contenedor_puntaje"
        android:layout_marginTop="35dp"
        android:layout_marginStart="700dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/fondo_transparente1">
        <TextView
            android:id="@+id/puntaje_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pixellari"
            android:text="Puntaje:"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:shadowColor="@color/colorBorde"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.5" />

    </RelativeLayout>

    <!-- Question text -->
    <RelativeLayout
        android:id="@+id/contenedor_titulo"
        android:layout_marginTop="80dp"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fondo_transparente1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/stay_pixel"
            android:shadowColor="@color/colorBorde"
            android:gravity="center"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.5"
            android:text="Completa la frase"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
    </RelativeLayout>


    <!-- Image container -->
    <LinearLayout
        android:id="@+id/container_image"
        android:layout_width="270dp"
        android:layout_marginStart="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/contenedor_titulo"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMinijuego2"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:background="@drawable/fondo_transparente"
            android:layout_margin="10dp" />
    </LinearLayout>

    <!-- Sentence lines -->
    <TextView
        android:id="@+id/sentence_line1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_marginStart="360dp"
        android:fontFamily="@font/stay_pixel"
        android:text=""
        android:textSize="24sp"
        android:textColor="@android:color/white" />

    <!-- Option buttons -->
    <LinearLayout
        android:id="@+id/botones_frases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="70dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp">

            <ImageButton
                android:id="@+id/boton_frase1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/fondomadera"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/text_in_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/stay_pixel"
                android:shadowColor="@color/colorBorde"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5"
                android:text="Opcion"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp">

            <ImageButton
                android:id="@+id/boton_frase2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/fondomadera"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_in_button2"
                android:layout_centerInParent="true"
                android:fontFamily="@font/stay_pixel"
                android:shadowColor="@color/colorBorde"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5"
                android:text="Opcion"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp">

            <ImageButton
                android:id="@+id/boton_frase3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/fondomadera"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/text_in_button3"
                android:fontFamily="@font/stay_pixel"
                android:shadowColor="@color/colorBorde"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5"
                android:text="Opcion"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp">

            <ImageButton
                android:id="@+id/boton_frase4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/fondomadera"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_in_button4"
                android:layout_centerInParent="true"
                android:fontFamily="@font/stay_pixel"
                android:shadowColor="@color/colorBorde"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5"
                android:text="opcion"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/siguiente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/fondomadera"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/stay_pixel"
                android:shadowColor="@color/colorBorde"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5"
                android:text="Siguiente"
                android:textColor="@android:color/white"
                android:textSize="28sp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>